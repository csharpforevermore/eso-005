@inherits UmbracoViewPage<USNWebsite.USNModels.USNBaseViewModel>

@{
    //Starter kit compatibility: 1.0

    UsnglobalSettings globalSettings = (UsnglobalSettings)Model.GlobalSettings;

    if (globalSettings.EnableNotification)
    {
        if (globalSettings.RememberAcceptanceDurationDays > 0)
        {
            @Html.Raw("<script>var exdays = " + globalSettings.RememberAcceptanceDurationDays + ";</script>")
        }
        else
        {
            @Html.Raw("<script>var exdays = 365;</script>")
        }
    }
}
