@inherits UmbracoViewPage<USNWebsite.USNModels.USNBaseViewModel>

@{
    //Starter kit compatibility: 1.0

    Usnstyle websiteStyle = (Usnstyle)Model.WebsiteStyle;
    UsnglobalSettings globalSettings = (UsnglobalSettings)Model.GlobalSettings;

    string logoClass = websiteStyle.WebsiteLogo == null ? "class=\"no-image\"" : String.Empty;

    <div id="logo" @Html.Raw(logoClass)><a href="@Model.Content.Root().Url" title="@globalSettings.WebsiteName">@globalSettings.WebsiteName</a></div>
}

